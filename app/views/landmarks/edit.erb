<h2>Edit Historical Landmark</h2>

<form class="" action="/landmarks/<%=@landmark.id%>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  Name: <input id="landmark[name]" type="text" name="name" value="<%=@landmark.name%>">
  Year: <input id="landmark[year_completed]" type="text" name="year_completed" value="<%=@landmark.year_completed%>">
  <input type="submit" value="Edit Landmark">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
