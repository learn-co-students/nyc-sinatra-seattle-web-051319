<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  <h2>Name:</h2>


  <input type="text" name="figure[name]" id="figure_name">

  <br></br>
  Landmarks:<br></br>

  <input type="text" name="landmark[name]" id="new_landmark"><br></br>

  <%@landmarks.each do |landmark|%>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input><br></br>
  <%end%>

  <br></br>

  <h2>Titles:</h2>

  <input type="text" name="title[name]" id="new_title">
  
  <br></br>
<%@titles.each do |title|%>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input><br></br>
<%end%>

  <input type="submit" value="Create New Figure">
</form>
