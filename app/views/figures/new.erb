<h2>Create New Figure</h2>

<form action="/figures" method="post">
  Name: <input id="figure[name]" type="text" name="figure_name"><br>
  <br>Title(s):<br>
  <%@titles.each do |title| %>
   <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"><%=title.name%><br>
  <%end%><br>
  New Title:<br>
  <input id="title[name]" type="text" name="new_title" value=""><br>
  <br>Landmarks(s):<br>
  <%@landmarks.each do |landmark| %>
   <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"><%=landmark.name%><br>
  <%end%><br>
  New Landmark:<br>
    Name:<input id="landmark[name]" type="text" name="new_landmark" value=""><br>
  <input type="submit" value="Create New Figure">
</form>

<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
